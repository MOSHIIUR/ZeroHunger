@model ZeroHunger.Models.Login
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@if (TempData["msg"] != null)
{
    <label class="alert alert-danger">@TempData["msg"]</label>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="d-sm-flex justify-content-center align-items-center justify-content-evenly h-75 m-0">
         <div><img src="~/Resources/menu.png" alt="Alternate Text" /></div>
         <div>
             <h2>Login</h2>
             @if (TempData["msg"] != null)
             {
                 <span class="alert alert-success">@TempData["msg"]</span>
             }
             <hr />

             <div>
                 <label class="control-label col-md-2">Email</label>

                 <div>
                     @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                     @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                 </div>
             </div>

             <div>
                 @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                 <div>
                     @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-control-lg", type="password"} })
                     @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                 </div>
             </div>

             <div>
                 <div class="col-md-offset-2 col-md-12 my-4">
                     <input type="submit" value="Login" class="btn btn-homepage" />
                 </div>
                 <div>New Here? <a href="/Home/Menu">Get Started</a></div>
             </div>
         </div>

    </div>

}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
