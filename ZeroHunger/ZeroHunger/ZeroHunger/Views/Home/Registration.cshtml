
@model ZeroHunger.EF.Models.Restaurent

@{ 
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="pt-5">
        <div class="d-flex flex-row justify-content-center justify-content-evenly align-items-center">
            <div><img src="~/Resources/menu.png" alt="Alternate Text" /></div>
            <div class="form-horizontal p-3">
                <h2>Register your Restaurent</h2>

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label class="control-label col-md-2">Name</label>

                    <div class="col-md-10">

                        @Html.EditorFor(model => model.RestaurentName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RestaurentName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Email</label>

                    <div class="col-md-10">

                        @Html.EditorFor(model => model.RestaurentEmail, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RestaurentEmail, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Address</label>

                    <div class="col-md-10">

                        @Html.EditorFor(model => model.RestaurentAddress, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RestaurentAddress, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Password</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.RestaurentPassword, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RestaurentPassword, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group my-4">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Sign Up" class="btn btn-homepage" />
                    </div>
                    <div>Already Have an Account? <a href="/Home/Login">Login</a></div>
                </div>
            </div>

        </div>
        


    </section>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


