
@model ZeroHunger.EF.Models.Receive

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>
    <div class="container p-3 text-center">
        <input id="Make-Request" type="submit" value="Food Request" class="btn btn-warning" />
        <a href="@Url.Action("Dashboard", "ReceiveRequest")" class="btn btn-primary"><i class="fas fa-plus"></i>Dashboard</a>
    </div>

</h2>

@if (TempData["msg"] != null)
{
    <label class="alert alert-success">@TempData["msg"]</label>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div id="Success-section" class="form-horizontal container p-3 justify-content-center" style="display: none">
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.PlacedTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PlacedTime, new { htmlAttributes = new { @class = "form-control", placeholder = "In Hour", type = "datetime-local" } })
                @Html.ValidationMessageFor(model => model.PlacedTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Place Request" class="btn btn-success my-3" />
                <input id="Hide-section" type="submit" value="Cancel" class="btn btn-danger my-3" />
            </div>
        </div>
    </div>


}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="~/Scripts/jquery-3.4.1.js"></script>

<script>
    $("#Make-Request").click(function (e) {
        e.preventDefault();
        $("#Success-section").show();
        $("#Make-Request").hide();
    });

    $("#Hide-section").click(function (e) {
        e.preventDefault();
        $("#Success-section").hide();
        $("#Make-Request").show();

    });

    $("#Dashboard").click(function (e) {
        e.preventDefault();
        $("#Dashboard-section").show();
        $("#Dashboard").hide();

    });


</script>

